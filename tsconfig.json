{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "include": ["sources/**/*.ts", "scripts/**/*.ts", "wrappers/**/*.ts"],
  "exclude": ["node_modules"]
}